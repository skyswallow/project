<h3><%= flash[:message] %></h3>
<table>
  <tr>
    <td>id</td>
    <td>title</td>
    <td>创建时间</td>
    <td>更新时间</td>
    <td>操作</td>
  </tr>
  <% (@blogs || []).each do |blog| %>
    <tr>
      <td>
        <a href="/blogs/show/<%= blog.id %>"><%= blog.id %></a>
      </td>
      <td>
        <%= blog.title %>
      </td>
      <td>
        <%= blog.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
      </td>
      <td>
        <%= blog.updated_at.strftime("%Y-%m-%d %H:%M:%S") %>
      </td>
      <td>
        <a href="/blogs/edit/<%= blog.id %>">编辑</a>&nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to("删除", {:action => :destroy, :id => blog.id}, :confirm => "是否确定要删除？", :method => :delete) %>
      </td>
    </tr>
  <% end %>
</table>
<br/>
<a href="/blogs/new">创建1</a>

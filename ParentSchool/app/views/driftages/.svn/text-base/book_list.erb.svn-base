<% BookListing.find_grade_type_books('0').each do |book| %>
<div>
  <img src="<%= book.image %>"/><br/>
  <a href="/driftages/book_detail/<%= book.blist_id %>" title="<%= book.name %>"><%=h truncate(book.name.strip, 20, "...") %></a><br/>

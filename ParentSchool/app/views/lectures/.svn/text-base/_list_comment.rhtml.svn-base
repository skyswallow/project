<p id="error" style="text-align: left;margin-left: 10px;color:red;margin-bottom: 5px;font-weight: bold;width: 600px;"><%= @error_info if @error_info %></p>
<h2 class="mian_h2"><span>评论列表</span></h2>
<ul>
  <% (@comments || []).each do |comment| %>
    <li class="comment-list1"><pre><%= h comment.content %></pre></li>
    <li class="comment-list2"><span style="width:340px; float:left;">发表人：<%= h comment.name if comment.name %></span><span>发表时间：<%= comment.created_at.strftime("%Y-%m-%d %H:%M:%S") %></span><% if is_admin? %><span style="margin-left: 20px;"><%= link_to_remote "删除", :url =>"/lectures/#{comment.id}",:update =>"parent_class", :html =>{ :style =>"color:red;"}, :method =>:delete, :confirm => "确定要删除该评论？" %></span><%end%></li>
  <% end %>
</ul>
